{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "typedocOptions": {
    "mode": "file",
    "excludePrivate": true,
    "out": "./docs",
    "plugin": "typedoc-plugin-markdown",
    "theme": "docusaurus2"
  }
}
