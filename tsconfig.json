{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "typedocOptions": {
    "mode": "file",
    "excludePrivate": true,
    "out": "docs",
    "theme": "node_modules/eledoc/bin/default/"
  }
}